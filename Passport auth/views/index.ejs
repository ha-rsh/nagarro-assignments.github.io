<style>
    html{background: rgb(255,0,117); background: linear-gradient(90deg, rgba(255,0,117,1) 6%, rgba(241,141,209,0.981127485173757) 92%); }

    .card {box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2); transition: 0.3s; background-color: white; width: 40%; text-align: center;
      position: relative; left: 28rem;}
    
    .card:hover {box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);}
    
    .container { padding: 2px 16px;}

    h2{text-align: center;}

    .button {border-radius: 4px; background-color: #f4511e; border: none; color: #FFFFFF; text-align: center; font-size: 28px; padding: 15px;
        width: 611px; transition: all 0.5s; cursor: pointer; margin: 5px; position: relative; left: 27.5rem;}

    .button span {cursor: pointer; display: inline-block; position: relative; transition: 0.5s;}

    .button span:after {content: '\00bb'; position: absolute; opacity: 0; top: 0; right: -20px; transition: 0.5s;}

    .button:hover span {padding-right: 25px;}

    .button:hover span:after { opacity: 1; right: 0;}

</style>  

